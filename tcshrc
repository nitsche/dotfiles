set prompt='%B[%m]%c1%#%b '

setenv PATH /usr/local/bin:$PATH
setenv CLICOLOR 1
setenv LSCOLORS dxgxxxxxbxxxxxbxbxdxdx
setenv LS_COLORS di=33:ex=31
setenv LESSHISTFILE -

alias la ls -a


if ($?prompt) then
	set savehist=100
	set histfile=~/.tmp/tcsh/history
	set histdup='prev'
	set color
	set autoexpand
	set autolist='ambiguous'

	bindkey -k down history-search-forward
	bindkey -k up history-search-backward

	set __git_commands = (add bisect blame branch checkout clone commit config diff diff-files difftool fetch grep gui init log merge mv pull push rebase reset rm show shortlog stash status tag)
	complete cd 'C/*/d/'
	complete kill 'c/-/S/'
	complete git 'p/1/$__git_commands/' \
'n/help/$__git_commands/'
endif
